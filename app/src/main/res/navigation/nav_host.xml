<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/screen1">

    <fragment
        android:id="@+id/screen2"
        android:name="com.example.constraint_layout.Fragment.Screen2"
        android:label="fragment_screen2"
        tools:layout="@layout/fragment_screen2" >
        <action
            android:id="@+id/action_screen2_to_screen3"
            app:destination="@id/screen3" />
    </fragment>
    <fragment
        android:id="@+id/screen3"
        android:name="com.example.constraint_layout.Fragment.Screen3"
        android:label="fragment_screen3"
        tools:layout="@layout/fragment_screen3" >
        <action
            android:id="@+id/action_screen3_to_screen4"
            app:destination="@id/screen4" />
    </fragment>
    <fragment
        android:id="@+id/screen1"
        android:name="com.example.constraint_layout.Fragment.Screen1"
        android:label="fragment_screen1"
        tools:layout="@layout/fragment_screen1" >
        <action
            android:id="@+id/action_screen1_to_screen2"
            app:destination="@id/screen2" />
    </fragment>
    <fragment
        android:id="@+id/screen4"
        android:name="com.example.constraint_layout.Fragment.Screen4"
        android:label="fragment_screen4"
        tools:layout="@layout/fragment_screen4" />
</navigation>